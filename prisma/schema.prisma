generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id      String  @id @default(uuid())
  nombre  String  @unique
  desc    String?

  @@map("categorias")
}

model Producto {
  id           String   @id @default(uuid())
  nombre       String
  precio       Int
  desc         String?
  categoria    String?
  archivo      String   @default("")
  createdAt    DateTime @default(now())
  activo       Boolean  @default(true)

  compras Compra[]
  contenidos Contenido[]

  @@map("productos")
}

model Contenido {
  id String @id @default(uuid())
  productoId String
  titulo String
  cuerpo String
  tipo String
  tipoRequerido Int
  orden Int

  producto Producto @relation(fields: [productoId], references: [id], onDelete: Cascade)

  @@map("contenidos_productos")
}

model Auspiciador {
  id        String   @id @default(uuid())
  nombre    String
  logo      String?
  tipo      String?
  desc      String?
  web       String?  @unique
  createdAt DateTime @default(now())

  @@map("auspiciadores")
}

model Compra {
  id            String   @id @default(uuid())
  userId        String
  productoId    String
  precioPagado  Int
  createdAt     DateTime @default(now())
  estado        String   @default("pendiente")

  emailContacto String?
  telefono      String?
  rut           String?
  mensaje       String?

  // Relaciones
  user     User     @relation(fields: [userId], references: [id])
  producto Producto @relation(fields: [productoId], references: [id])

  @@map("compras")
}

model User {
  id            String    @id @default(uuid())
  name          String? // Nombre completo
  email         String?   @unique
  emailVerified DateTime?
  image         String? // Avatar o Foto

  compras Compra[]

  // -- TUS CAMPOS PERSONALIZADOS --
  password String?
  role     String  @default("user") // 'admin' o 'user'
  type     Int @default(0) // 0 = free, 1 = tier 1, etc...
  status   String  @default("pendiente") // 'pendiente', 'aprobado'
  username String? // Tu campo de usuario personalizado
  // ------------------------------

  accounts  Account[]
  sessions  Session[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users") // Nombre est√°ndar en DB
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id      String   @id @default(uuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("verification_tokens")
}